{
  "name": "@logux/state",
  "version": "0.0.0",
  "description": "Tiny state manager with CRDT, cross-tab, and Logux support",
  "keywords": [
    "logux",
    "state manager",
    "crdt",
    "cross-tab"
  ],
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "clean": "rimraf coverage/",
    "test": "jest-ci --coverage && eslint-ci . && check-dts && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/state",
  "sideEffects": false,
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "@logux/client": "^0.9.2",
    "@logux/core": "^0.6.2",
    "preact": "^10.0.0",
    "react": "^16.8.0"
  },
  "peerDependenciesMeta": {
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "nanoevents": "^5.1.8",
    "nanoid": "^3.1.12"
  },
  "devDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "logux/core#next",
    "@logux/eslint-config": "^41.0.1",
    "@logux/sharec-config": "^0.7.7",
    "@size-limit/dual-publish": "^4.6.0",
    "@size-limit/preset-small-lib": "^4.6.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.0",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@types/ws": "^7.2.7",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "check-dts": "^0.3.3",
    "dual-publish": "^0.11.0",
    "eslint": "^7.11.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.4.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^3.0.2",
    "size-limit": "^4.6.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "yaspeller": "^7.0.0",
    "yaspeller-ci": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Base",
      "import": "{ subscribe, Store }",
      "limit": "256 B"
    },
    {
      "name": "React Base",
      "import": {
        "./react/index.js": "{ ClientContext, useStore }",
        "./index.js": "{ Store }"
      },
      "limit": "327 B"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "GraphQL",
      "roadmap",
      "Logux"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.7"
  }
}

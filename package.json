{
  "name": "@logux/state",
  "version": "0.0.0",
  "description": "Tiny state manager with CRDT, cross-tab, and Logux support",
  "keywords": [
    "logux",
    "state manager",
    "crdt",
    "cross-tab"
  ],
  "scripts": {
    "test": "jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/state",
  "sideEffects": false,
  "types": "./index.d.ts",
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "peerDependencies": {
    "@logux/client": "^0.9.2",
    "@logux/core": "^0.6.2",
    "preact": "^10.0.0",
    "react": "^16.8.0"
  },
  "peerDependenciesMeta": {
    "preact": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "nanoevents": "^5.1.10"
  },
  "devDependencies": {
    "@logux/client": "logux/client#next",
    "@logux/core": "logux/core#next",
    "@logux/eslint-config": "^42.2.1",
    "@logux/sharec-config": "^0.8.4",
    "@size-limit/dual-publish": "^4.7.0",
    "@size-limit/preset-small-lib": "^4.7.0",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.2",
    "@types/jest": "^26.0.15",
    "@types/jsdom": "^16.2.5",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "check-dts": "^0.4.0",
    "dual-publish": "^0.11.0",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-environment-jsdom": "^26.6.2",
    "lint-staged": "^10.5.1",
    "nanodelay": "^1.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.7.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off"
    },
    "globals": {
      "jsdom": false
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Base",
      "import": {
        "./index.js": "{ subscribe, Store }"
      },
      "limit": "349 B"
    },
    {
      "name": "React Base",
      "import": {
        "./react/index.js": "{ ClientContext, useStore }",
        "./index.js": "{ Store }"
      },
      "limit": "466 B"
    },
    {
      "name": "React CRDT",
      "import": {
        "@logux/client": "{ CrossTabClient }",
        "./react/index.js": "{ ClientContext, useStore }",
        "./index.js": "{ RemoteMap }"
      },
      "limit": "10 KB"
    },
    {
      "name": "Router",
      "import": {
        "./index.js": "{ createRouter }"
      },
      "limit": "788 B"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "GraphQL",
      "roadmap",
      "Logux"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.4"
  }
}

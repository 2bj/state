{
  "name": "@logux/state",
  "version": "0.0.0",
  "description": "Tiny state manager with CRDT, cross-tab, and Logux support",
  "keywords": [
    "logux",
    "state manager",
    "crdt",
    "cross-tab"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/state",
  "sideEffects": false,
  "types": "./index.d.ts",
  "type": "module",
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "peerDependencies": {
    "@logux/client": "^0.9.2",
    "@logux/core": "^0.6.2",
    "react": "^16.8.0",
    "vue": "^3.0.6"
  },
  "peerDependenciesMeta": {
    "@logux/client": {
      "optional": true
    },
    "@logux/core": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@logux/client": "logux/client#next",
    "@logux/core": "logux/core#next",
    "@logux/eslint-config": "^44.1.2",
    "@logux/sharec-config": "^0.8.5",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/vue": "^6.4.0",
    "@types/jest": "^26.0.20",
    "@types/jsdom": "^16.2.6",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "check-dts": "^0.4.4",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.17.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^28.0.2",
    "husky": "^4.3.8",
    "jest": "^27.0.0-next.2",
    "jest-localstorage-mock": "^2.4.7",
    "lint-staged": "^10.5.4",
    "nanodelay": "^1.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.9.2",
    "ts-jest": "^27.0.0-next.6",
    "typescript": "^4.2.2",
    "vue": "^3.0.6",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "consistent-return": "off"
    },
    "globals": {
      "jsdom": false
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Minimum Store",
      "import": {
        "./index.js": "{ createStore }"
      },
      "limit": "157 B"
    },
    {
      "name": "Minimum Map",
      "import": {
        "./index.js": "{ defineMap }"
      },
      "limit": "307 B"
    },
    {
      "name": "Minimum React",
      "import": {
        "./react/index.js": "{ useStore }",
        "./index.js": "{ createStore }"
      },
      "limit": "374 B"
    },
    {
      "name": "Router",
      "import": {
        "./index.js": "{ createRouter }"
      },
      "limit": "699 B"
    },
    {
      "name": "React CRDT",
      "import": {
        "@logux/client": "{ CrossTabClient }",
        "./react/index.js": "{ ClientContext, useStore, ChannelErrors, useFilter }",
        "./index.js": "{ defineSyncMap, changeSyncMap }"
      },
      "limit": "6 KB"
    },
    {
      "name": "Minimum Vue",
      "import": {
        "./vue/index.js": "{ useStore }",
        "./index.js": "{ createStore }"
      },
      "limit": "636 B"
    },
    {
      "name": "Vue CRDT",
      "import": {
        "@logux/client": "{ CrossTabClient }",
        "./vue/index.js": "{ loguxClient, useStore, ChannelErrors, useFilter }",
        "./index.js": "{ defineSyncMap, changeSyncMap }"
      },
      "limit": "6.1 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "GraphQL",
      "roadmap",
      "Logux"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.5"
  }
}
